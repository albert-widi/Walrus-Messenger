<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="6dp"
    android:paddingLeft="3dp"
    android:paddingBottom="6dp"
    android:paddingRight="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/adapter_message_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Albert Widiatmoko"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/adapter_message_last_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adapter_message_friend_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:text="Halo bro apa kabarnya nih?"
            android:textColor="@color/last_message2"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/adapter_message_last_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/adapter_message_friend_name"
            android:layout_marginRight="2dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:text="12/12/2013"
            android:textSize="14dp"
            android:textColor="@color/chat_activity_time"/>

        <TextView
            android:id="@+id/adapter_message_last_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/adapter_message_last_message"
            android:layout_below="@id/adapter_message_friend_name"
            android:layout_marginRight="2dp"
            android:layout_alignParentRight="true"
            android:text="20:00PM"
            android:textSize="14dp"
            android:textColor="@color/chat_activity_time"/>

    </RelativeLayout>


</LinearLayout>