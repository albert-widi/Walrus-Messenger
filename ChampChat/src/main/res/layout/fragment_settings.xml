<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.valge.champchat.SettingsActivity$PlaceholderFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <CheckBox
                        android:id="@+id/settings_message_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Message History"/>

                    <CheckBox
                        android:id="@+id/settings_notification_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_message_history"
                        android:text="Notification Sound"/>

                    <CheckBox
                        android:id="@+id/settings_messaging_sound"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/settings_notification_sound"
                        android:text="Messaging Sound"/>

                </RelativeLayout>

        </FrameLayout>

</RelativeLayout>
